# LLM API Keys (at least one is required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Search API
SERPER_API_KEY=your_serper_api_key_here

# Server
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/atom

# Redis (optional — falls back to in-memory cache if not set)
# REDIS_URL=redis://localhost:6379

# Authentication (optional — enables user conversations)
# CLERK_SECRET_KEY=your_clerk_secret_key_here

# Cache TTLs (seconds, optional)
# CACHE_TTL_SEARCH=3600
# CACHE_TTL_SCRAPE=21600
# CACHE_TTL_QUERY=86400
# CACHE_TTL_ANSWER=3600
